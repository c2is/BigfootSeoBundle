{% extends '::base.html.twig' %}

{% block body %}

<form action="{{ path('admin_seo_metadata_create') }}" method="post" {{ form_enctype(form) }} id="metadata_form_new">

    <div class="widget">
        <div class="widget-head">
            <div class="pull-left">{{ 'Metadata creation' | trans }}</div>
            <div class="clearfix"></div>
        </div>

        <div class="widget-content">
            <div class="padd">

                <div id="list_parameters"></div>

                {{ form_row(form.route) }}

                {{ form_rest(form) }}
            </div>
        </div>

        <div class="widget-foot">
            <button class="btn" type="submit">{{ 'Create' | trans }}</button>
            <a href="{{ path('admin_seo_metadata') }}" class="btn">{{ 'Cancel' | trans }}</a>
            <div class="clearfix"></div>
        </div>
    </div>
</form>

{% endblock %}


{% block javascripts %}
    <script src="{{ asset('bundles/bigfootseo/js/seo_scripts.js') }}"></script>
{% endblock %}