{% extends '::base.html.twig' %}

{% block body -%}
    <h1>MetadataParameter</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Route</th>
                <td>{{ entity.route }}</td>
            </tr>
            <tr>
                <th>Parameters</th>
                <td>
                    {% for parameter in entity.parameters %}
                        {{ parameter.name }}<br />
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_parameter_metadataparameter') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_parameter_metadataparameter_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('admin_parameter_metadataparameter_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
